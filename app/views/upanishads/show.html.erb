<% provide(:title, @upanishad.name) %>
<div class="row"
  <aside class="span4">
    <section>
      <h1>
        <%= @upanishad.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @upanishad.verses.any? %>
      <h3> Verses (<%= @upanishad.verses.count %>)</h3>
      <ol class="verses">
        <%= render @verses %>
      </ol>
      <%= will_paginate @verses %>
    <% end %>
  </div>
</div>
